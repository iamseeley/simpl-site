{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": ["src/"],
    "exclude": [],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["src/"],
    "exclude": [],
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "always"
    }
  },
  "test": {
    "include": ["tests/"],
    "exclude": []
  },
  "tasks": {
    "start": "deno run --allow-read --allow-write src/cli.ts",
    "test": "deno test --allow-read --allow-write tests/"
  },
  "imports": {
    "handlebars": "https://deno.land/x/handlebars@v0.10.0/mod.ts"
  }
}